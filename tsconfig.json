{
	"extends": "./tsconfig.paths.json",
	"compilerOptions": {
		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"target": "ES2021",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"node_modules/**/*",
		".webpack/**/*",
		"_warmup/**/*",
		".vscode/**/*",
		"jest.config.ts"
	],
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}
